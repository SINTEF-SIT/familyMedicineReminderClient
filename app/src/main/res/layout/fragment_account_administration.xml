<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccountAdministrationFragment"
    android:fillViewport="true"
    android:focusableInTouchMode="false"
    android:background="#EEEEEE">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.NewReminderFragment"
        android:id="@+id/newReminderLayout"
        android:showDividers="middle"
        android:dividerPadding="10dp">
        <!--android:divider="@drawable/horizontal_divider"-->

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="93dp"
            android:layout_gravity="center_horizontal|top"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/mycyfapplogo" />
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERSONAL"
            android:padding="0dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/settingsPersonalSection" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff">

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/account_year_edit_text"
                android:inputType="number"
                android:text="1992"
                android:hint="year"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year of birth"
                android:id="@+id/nameText"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginTop="5dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Discrete reminders"
            android:id="@+id/account_reminder_switch"
            android:checked="true"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#ffffff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENERAL"
            android:padding="0dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/settingsGeneralSection" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>


        <Switch
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Receive notifications"
            android:id="@+id/account_notification_switch"
            android:checked="true"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#ffffff" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snooze"
                android:id="@+id/snoozeText"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:layout_gravity="left|top"
                android:layout_marginTop="5dp" />

            <EditText
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:id="@+id/account_snooze_edit_text"
                android:inputType="number"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom|right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="minute(s)"
                android:layout_marginTop="5dp"
                android:layout_gravity="top|right"
                android:textSize="20sp"
                android:layout_marginRight="15dp"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:id="@+id/account_save_button"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCOUNT FOR SYNC AND ONLINE DELETION"
            android:padding="0dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/settingsAccountSection" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
            android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/emailText"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginRight="70dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailEditText"
            android:inputType="textEmailAddress"
            android:hint="john.doe@email.com"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:layout_marginRight="10dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/passwordText"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginRight="70dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passwordEditText"
                android:inputType="textPassword"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/saveButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import data"
            android:id="@+id/importButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GUARDIAN/GUARDEE"
            android:padding="0dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/guardianSection" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notify time"
                android:id="@+id/notifyTimeText"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginRight="10dp" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/notifyTime"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The amount of wait-time you will be notified after your child has failed to take their medicine."
            android:padding="0dp"
            android:textSize="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/notifyTimeInfo" />
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT/CONTACT"
            android:padding="0dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/aboutSection" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This application is developed by a group of 6 students at Norwegian University og Science and Technology (NTNU) as their bachelor thesis. It was made in collaboration with SINTEF for a EU project called My Cystic Fibrosis App (MyCyFApp). Contact: epost@mycyfapp.eu"
            android:padding="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/aboutUsSection" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share/invite"
                android:id="@+id/shareButton"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete all data"
                android:id="@+id/account_delete_all_data_Button"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>

