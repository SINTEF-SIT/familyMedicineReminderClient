<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.sondrehj.familymedicinereminderclient.LinkingFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Enter the ID below in a Guardian app to link your user."
             android:id="@+id/linking_info_text"
             android:layout_gravity="center_horizontal"
             android:width="200dp"
             android:layout_marginTop="50dp"
             android:layout_marginBottom="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your ID: "
                android:id="@+id/id_field_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="placeholderID"
                android:id="@+id/id_field_data"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <LinearLayout
             android:orientation="vertical"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp">

            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Enter the ID from the childrens phone:"
                 android:id="@+id/id_input_field_info"
                 android:layout_gravity="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_input_field_data"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:hint="ex. 42d8a"
                android:enabled="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:clipChildren="false"
            android:layout_marginBottom="20dp"
            android:padding="10dp">

            <Button
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="Link accounts"
                 android:id="@+id/link_button" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/status_icon"
             android:layout_gravity="center_horizontal"
             android:src="@drawable/android_ok"
             android:tint="#c4c4c4"
            android:layout_marginBottom="10dp"
            android:contentDescription="Status Icon" />

        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:id="@+id/status_feedback"
             android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp" />
    </LinearLayout>

</RelativeLayout>