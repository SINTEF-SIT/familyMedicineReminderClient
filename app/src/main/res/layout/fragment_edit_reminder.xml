<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".fragments.NewReminderFragment"
    android:id="@+id/newReminderLayout"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMINDER"
        android:id="@+id/reminderHeader"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43sp"
        android:layout_gravity="center_horizontal"
        android:background="#fff"
        android:layout_marginTop="2dp">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Active"
            android:id="@+id/reminderSwitch"
            android:checked="true"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43sp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/nameText"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_marginRight="70dp"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameEditText"
            android:inputType="text"
            android:layout_marginRight="10dp"
            android:textAlignment="textEnd"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE &amp; TIME"
        android:id="@+id/dateAndTimeHeader"
        android:layout_marginLeft="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:id="@+id/datePickerLayout"
        android:clickable="true"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/dateText"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22.12.2018"
            android:id="@+id/dateSetText"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:id="@+id/timePickerLayout"
        android:clickable="true"
        android:layout_marginRight="0dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/timeText"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/timeSetText"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="12:44"
            android:layout_marginRight="15dp"
            android:gravity="right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repeatLayout"
        android:background="#fff">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Repeat"
            android:id="@+id/repeatSwitch"
            android:checked="false"
            android:textSize="20sp"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEDICATION"
        android:id="@+id/medicationHeader"
        android:layout_marginLeft="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43sp"
        android:layout_gravity="center_horizontal"
        android:background="#fff">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attach medication"
            android:id="@+id/medicationSwitch"
            android:checked="false"
            android:textSize="20sp"
            android:textColor="#000000"
            android:padding="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:id="@+id/chooseMedicationWrapper"
        android:clickable="true"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medication"
            android:id="@+id/chooseMedication"
            android:layout_marginLeft="16dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to choose"
            android:id="@+id/chosenMedication"
            android:textSize="14sp"
            android:textColor="#DDDD"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:id="@+id/chooseDosageWrapper"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosage"
            android:id="@+id/chooseDosage"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:textColor="#DDDD"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/dosage"
            android:inputType="numberDecimal"
            android:layout_marginLeft="130dp"
            android:textSize="14sp"
            android:enabled="false"
            android:textColor="#DDDD"
            android:layout_gravity="center"
            android:gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dosageUnit"
            android:textSize="14sp"
            android:textColor="#DDDD"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="right"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"
        android:id="@+id/border"
        android:visibility="gone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp" />

    </LinearLayout>

</ScrollView>
