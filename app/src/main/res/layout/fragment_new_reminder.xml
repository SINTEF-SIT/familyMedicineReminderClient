<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sondrehj.familymedicinereminderclient.NewReminderFragment"
    android:id="@+id/newreminderfrag">

    <Switch
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Reminder"
        android:id="@+id/reminderSwitch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:checked="true"
        android:textSize="20sp"
        android:padding="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Picker"
        android:id="@+id/timePickerButton"
        android:layout_gravity="center"
        android:layout_below="@+id/datePickerButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Picker"
        android:id="@+id/datePickerButton"
        android:layout_below="@+id/reminderSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="87dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Name"
        android:id="@+id/textName"
        android:layout_below="@+id/reminderSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/reminderSwitch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textName"
        android:layout_toEndOf="@+id/textName" />

</RelativeLayout>
