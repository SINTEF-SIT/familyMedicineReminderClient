<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sondrehj.familymedicinereminderclient.NewReminderFragment"
    android:id="@+id/newreminderfrag">

    <Switch
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Reminder"
        android:id="@+id/reminderSwitch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:checked="true"
        android:textSize="20sp"
        android:padding="10dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Time Picker"
        android:id="@+id/timePickerButton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/datePickerButton"
        android:layout_alignStart="@+id/datePickerButton" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Date Picker"
        android:id="@+id/datePickerButton"
        android:layout_below="@+id/nameEditText"
        android:layout_alignLeft="@+id/nameEditText"
        android:layout_alignStart="@+id/nameEditText"
        android:layout_marginTop="75dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Name"
        android:id="@+id/nameText"
        android:layout_below="@+id/reminderSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="0dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/nameEditText"
        android:layout_below="@+id/reminderSwitch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_reminder_save"/>

</RelativeLayout>
